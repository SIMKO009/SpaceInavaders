<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="#010101">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/space"
            android:id="@+id/imageView2"
            android:scaleType="fitCenter"
            android:scaleX="3"
            android:scaleY="2" />

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteY="1dp"
            tools:layout_editor_absoluteX="1dp"
            android:gravity="center_horizontal"
            android:paddingTop="30dp"
            android:background="#00000000">

        <ImageView
                android:layout_width="450dp"
                android:layout_height="152dp"
                app:srcCompat="@drawable/logo"
                android:id="@+id/imageView" />

        <Space
                android:layout_width="match_parent"
                android:layout_height="45dp" />

        <Button
                android:text="NovÃ¡ hra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button"
                android:background="#00000000"
                android:textColor="#ffe200"
                android:textSize="34sp"
                android:textAllCaps="false"
                android:fontFamily="@font/silkscreen_bold"
                android:onClick="new_game"
                android:textStyle="bold"
                android:typeface="monospace" />

        <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        <Button
                android:text="Pokracovat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button2"
                android:background="#00000000"
                android:textColor="#ffe200"
                android:textSize="30sp"
                android:textAllCaps="false"
                android:fontFamily="@font/silkscreen_ttf"
                android:onClick="continue_last_save"
                android:typeface="monospace" />

        <Button
                android:text="tutorial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tutorial"
                android:background="#00000000"
                android:textColor="#ffe200"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:fontFamily="@font/silkscreen_ttf"
                android:onClick="show_tutorial"
                android:typeface="monospace" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>